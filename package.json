{
  "name": "postgraphile-demo",
  "private": true,
  "scripts": {
    "dev": "npm run start:services && concurrently npm:*:watch",
    "start:services": "docker-compose up -d",
    "server:watch": "npm run --workspace=server dev",
    "codegen:watch": "npm run --workspace=codegen watch",
    "tsc:watch": "tsc -b --watch --preserveWatchOutput",
    "db": "graphile-migrate",
    "db:watch": "graphile-migrate watch",
    "db:commit": "graphile-migrate commit",
    "db:uncommit": "graphile-migrate uncommit",
    "db:reset": "graphile-migrate reset --erase",
    "codegen": "npm run --workspace=codegen build",
    "lint": "eslint --cache --fix --format=visualstudio --ignore-path=.gitignore ."
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
