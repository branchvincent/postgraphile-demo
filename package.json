{
  "name": "postgraphile-demo",
  "private": true,
  "scripts": {
    "dev": "npm run start:services && concurrently npm:*:watch",
    "start:services": "docker-compose up -d",
    "server:watch": "npm run server dev",
    "codegen:watch": "npm run codegen watch",
    "tsc:watch": "tsc -b --watch --preserveWatchOutput",
    "db:watch": "npm run server db:watch",
    "lint": "eslint --cache --fix --format=visualstudio .",
    "cli": "npm run --workspace=cli",
    "codegen": "npm run --workspace=codegen",
    "server": "npm run --workspace=server"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-gitignore": "^0.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
